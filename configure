#!/bin/sh
#
# ceeboo 2007, 2010

# Set default C++ compiler as suggested by Brian Ripley.
cxx=`${R_HOME}/bin/R CMD config CXX`
cxxflags=`${R_HOME}/bin/R CMD config CXXFLAGS`

echo "** binaries"	# missing in R

cwd=`pwd`

mkdir $cwd/exec

( cd $cwd/src_exec/TPOSE/; 
  make CXX="$cxx" CXXFLAGS="$cxxflags"; 
  mv makebin getconf exttpose  $cwd/exec/
)

( cd $cwd/src_exec/cSPADE/; 
  make CXX="$cxx" CXXFLAGS="$cxxflags"; 
  mv spade $cwd/exec/
)

###
